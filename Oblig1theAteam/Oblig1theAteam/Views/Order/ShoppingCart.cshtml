@model Oblig1theAteam.ViewModels.Order.ShoppingCartViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Shopping Cart";
}
@section scripts {
    <script src="~/js/order.js" type="text/javascript"></script>
}

<h2>ShoppingCart</h2>

@if (Model.Movies.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Title
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) kr
            </td>
            <td>
                @Html.ActionLink("Remove from cart", "RemoveFromCart", new { movieId = item.Id })
            </td>
        </tr>
    }
        </tbody>
    </table>

    <div class="panel-footer clearfix">
        <div class="pull-left">
            <h3>Total Sum: @Model.TotalSum</h3>
            @if (!string.IsNullOrEmpty(Context.Session.GetString("_LoggedIn")))
            {
                <button onclick="showVisaForm()">Complete Purchase</button>
            }
            else
            {
                <div>Log in or <a asp-area="" asp-controller="User" asp-action="Register">Register</a> to complete purchase</div>
                @using (Html.BeginForm("LoginForPurchase", "User", FormMethod.Post, new { @class = "navbar-form" }))
                {
                    <div class="form-group">
                        @Html.TextBox("username", "", new { @class = "form-control layout-input", placeholder = "email", id = "username2" })
                        @Html.Password("password", "", new { @class = "form-control layout-input", placeholder = "password", id = "password2" })
                        <button class="btn btn-default layout-login-btn">Login</button>
                    </div>
                }
            }
        </div>
    </div>
}
else
{
   <p>You don't have any movies in your shopping cart!</p>
}
<div id="visa-form" class="panel-footer clearfix" style="visibility:hidden">
    <div class="pull-left">
        <h6>Card Information:</h6>
        <div class="form-horizontal">
            <div class="form-group">
                <form id="completingPurchaseForm" asp-action="CompletePurchase" asp-controller="Order" method="post" enctype="multipart/form-data">
                    <input id="CardNumber" type="text" class="form-control layout-input" placeholder="card number" />
                    <input id="CVV" type="text" class="form-control layout-input" placeholder="cvv" />
                    <div id="expirationDate">
                        <input id="ExpirationMonth" type="text" class="form-control layout-input" placeholder="MM" />
                        /
                        <input id="ExpirationYear" type="text" class="form-control layout-input" placeholder="YY" />
                    </div>
                    <button class="btn btn-primary" name="confirmButton" type="submit">Confirm Purchase</button>
                </form>
            </div>
        </div>
    </div>
</div>
@Html.Partial("orderModal")